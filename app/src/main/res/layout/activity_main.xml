<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dotinstall.secaiderf2.PostLoginActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/button1"
        android:layout_width="123dp"
        android:layout_height="36dp"
        android:text="美ポジで®︎早歩き"
        android:layout_marginLeft="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/flame_style1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="190dp"
        android:layout_height="36dp"
        android:text="3秒タッチ|これだけ体操®︎"
        android:layout_marginStart="8dp"
        android:layout_marginRight="-1dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="8dp"
        android:onClick="koredake_view"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/flame_style3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="195dp"
        android:layout_height="36dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="美ポジで®︎早歩き"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        app:layout_constraintHorizontal_bias="0.502"
        android:textColor="#ff0000"
        android:background="#dcdcdc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="249dp"
        android:layout_height="42dp"
        android:text="ヘルスケアデータ"
        android:layout_marginEnd="8dp"
        android:onClick="health_data"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:textColor="#ff0000"
        android:background="@drawable/flame_style2"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />



    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:text="LINEnameさん"
        android:textAppearance="@android:style/TextAppearance"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="logOut"
        android:textColor="#0000ff"
        android:layout_marginRight="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
